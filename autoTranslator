sudo cd ~/Affinity-in-Korean/
echo "Beta를 번역하려면 1, 그렇지 않으면 0을 입력하세요."
read BETA
echo "Affinity Designer를 번역하려면 1, Affinity Photo를 번역하려면 2를 입력하세요."
read APP
echo "Frameworks를 번역하려면 1, 그렇지 않으면 0을 입력하세요."
read WHERE

if [ $APP -eq 1 ]
then
  echo "Affinity Designer를 번역합니다."
  if [ $WHERE -eq 1 ]
  then
    echo "Frameworks를 번역합니다."
    if [ $BETA -eq 1 ]
    then
      echo "Beta를 번역합니다."
      for (( i = 1; i <= 242; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryDesigner /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/"$NAME" > DesignerFrameworks_Beta/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncDesignerFrameworks_Beta
    else
      for (( i = 1; i <= 242; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Designer.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryDesigner /Applications/Affinity\ Designer.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/"$NAME" > DesignerFrameworks/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncDesignerFrameworks
    fi
  else
    if [ $BETA -eq 1 ]
    then
      echo "Beta를 번역합니다."
      for (( i = 1; i <= 12; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Designer\ Beta.app/Contents/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryDesigner /Applications/Affinity\ Designer\ Beta.app/Contents/Resources/en.lproj/"$NAME" > Designer_Beta/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncDesigner_Beta
      echo "로그를 기록합니다."
      /usr/bin/diff -s /Applications/Affinity\ Designer\ Beta.app/Contents/Resources/en.lproj/ /Applications/Affinity\ Designer\ Beta.app/Contents/Resources/ja.lproj/ | grep -E "<string>|.nib|.strings" > ~/Affinity-in-Korean/Log/Beta.Designer.en-ja.log
      /usr/bin/diff -s /Applications/Affinity\ Designer\ Beta.app/Contents/Resources/en.lproj/ /Applications/Affinity\ Designer\ Beta.app/Contents/Resources/ko.lproj/ | grep -E "<string>|.nib|.strings" > ~/Affinity-in-Korean/Log/Beta.Designer.en-ko.log
    else
      for (( i = 1; i <= 12; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Designer.app/Contents/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryDesigner /Applications/Affinity\ Designer.app/Contents/Resources/en.lproj/"$NAME" > Designer/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncDesigner
      echo "로그를 기록합니다."
      /usr/bin/diff -s /Applications/Affinity\ Designer.app/Contents/Resources/en.lproj/ /Applications/Affinity\ Designer.app/Contents/Resources/ja.lproj/ | grep -E "<string>|.nib|.strings" > ~/Affinity-in-Korean/Log/Designer.en-ja.log
      /usr/bin/diff -s /Applications/Affinity\ Designer.app/Contents/Resources/en.lproj/ /Applications/Affinity\ Designer.app/Contents/Resources/ko.lproj/ | grep -E "<string>|.nib|.strings" > ~/Affinity-in-Korean/Log/Designer.en-ko.log
    fi
  fi
else
  echo "Affinity Photo를 번역합니다."
  if [ $WHERE -eq 1 ]
  then
    echo "Frameworks를 번역합니다."
    if [ $BETA -eq 1 ]
    then
      echo "Beta를 번역합니다."
      for (( i = 1; i <= 243; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Photo\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryPhoto /Applications/Affinity\ Photo\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/"$NAME" > PhotoFrameworks_Beta/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncPhotoFrameworks_Beta
    else
      for (( i = 1; i <= 243; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Photo.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryPhoto /Applications/Affinity\ Photo.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/"$NAME" > PhotoFrameworks/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncPhotoFrameworks
    fi
  else
    if [ $BETA -eq 1 ]
    then
      echo "Beta를 번역합니다."
      for (( i = 1; i <= 12; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Photo\ Beta.app/Contents/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryPhoto /Applications/Affinity\ Photo\ Beta.app/Contents/Resources/en.lproj/"$NAME" > Photo_Beta/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncPhoto_Beta
    else
      for (( i = 1; i <= 12; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Photo.app/Contents/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryPhoto /Applications/Affinity\ Photo.app/Contents/Resources/en.lproj/"$NAME" > Photo/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncPhoto
    fi
  fi
fi
