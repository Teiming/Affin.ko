sudo cd ~/Affinity-in-Korean/
echo "Beta를 번역하려면 1, 그렇지 않으면 0을 입력하세요."
read BETA
echo "Affinity Designer를 번역하려면 1, Affinity Photo를 번역하려면 0를 입력하세요."
read APP
echo "Frameworks를 번역하려면 1, 그렇지 않으면 0을 입력하세요."
read WHERE

if [ $APP -eq 1 ]
then
  echo "Affinity Designer를 번역합니다."
  if [ $WHERE -eq 1 ]
  then
    echo "Frameworks를 번역합니다."
    if [ $BETA -eq 1 ]
    then
      echo "Beta를 번역합니다."
      for (( i = 1; i <= 304; i++ ))
      do
        NAME=$(/bin/ls -a /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/ | /usr/bin/grep "i" | /usr/bin/sed -n "$i"p | /usr/bin/sed -e "s/^.*\///")
        /usr/bin/sudo echo $i"." $NAME"을 번역합니다."
        /usr/bin/sed -f DictionaryDesigner /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/"$NAME" > DesignerBetaFrameworks/"$NAME"
        echo "번역이 끝났습니다."
      done
      /usr/bin/sudo ./SyncBetaDesignerFrameworks
      echo "로그를 기록합니다."
      /usr/bin/diff -s /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/ /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/ja.lproj/ | grep -E "<string>|.nib|.strings" > ~/Affinity-in-Korean/Log/BetaDesignerFrameworks.en-ja.log
      /usr/bin/diff -s /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/en.lproj/ /Applications/Affinity\ Designer\ Beta.app/Contents/Frameworks/libcocoaui.framework/Versions/A/Resources/ko.lproj/ | grep -E "<string>|.nib|.strings" > ~/Affinity-in-Korean/Log/BetaDesignerFrameworks.en-ko.log
