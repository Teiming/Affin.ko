cd ~/Affinity-in-Korean/
echo "Affinity Designer를 번역하려면 1, Affinity Photo를 번역하려면 2를 입력하세요."
read APP
echo "Frameworks를 번역하려면 1, 그렇지 않으면 0을 입력하세요."
read WHERE
echo "번역할 파일을 입력합니다."
read PATH
NAME=$(echo $PATH | /usr/bin/sed -e "s/^.*\///")
echo $NAME"을(를) 번역합니다."

if [ $APP -eq 1 ]
then
  if [ $WHERE -eq 1 ]
  then
    /usr/bin/sed -f DesignerDictonary "$PATH" > Designer.Frameworks/$NAME.temp && /bin/mv Designer.Frameworks/$NAME.temp Designer.Frameworks/$NAME
  else
    /usr/bin/sed -f DesignerDictonary "$PATH" > Designer/$NAME.temp && /bin/mv Designer/$NAME.temp Designer/$NAME
  fi
else
  if [ $WHERE -eq 1 ]
  then
    /usr/bin/sed -f PhotoDictionary "$PATH" > Photo.Frameworks/$NAME.temp && /bin/mv Photo.Frameworks/$NAME.temp Photo.Frameworks/$NAME
  else
    /usr/bin/sed -f PhotoDictionary "$PATH" > Photo/$NAME.temp && /bin/mv Photo/$NAME.temp Photo/$NAME
  fi
fi
./LogWrite
