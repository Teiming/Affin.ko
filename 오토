cd ~/Affinity-in-Korean/
echo "Affinity Designer를 번역하려면 1, Affinity Photo를 번역하려면 2를 입력하세요."
read APP
echo "Frameworks를 번역하려면 1, 그렇지 않으면 0을 입력하세요."
read WHERE
echo "번역할 파일을 입력합니다."
read PATH
NAME=$(echo $PATH | /usr/bin/sed -e "s/^.*\///")
echo $NAME"을(를) 번역합니다."

if [ $APP -eq 1 ]
then
  if [ $WHERE -eq 1 ]
  then
    /usr/bin/sed -f DictionaryDesigner "$PATH" > DesignerFrameworks/"$NAME".temp && /bin/mv DesignerFrameworks/"$NAME".temp DesignerFrameworks/"$NAME"
    /usr/bin/sudo ./SyncDesignerFrameworks
  else
    /usr/bin/sed -f DictionaryDesigner "$PATH" > Designer/"$NAME".temp && /bin/mv Designer/"$NAME".temp Designer/"$NAME"
    /usr/bin/sudo ./SyncDesigner
  fi
else
  if [ $WHERE -eq 1 ]
  then
    /usr/bin/sed -f DictionaryPhoto "$PATH" > PhotoFrameworks/"$NAME".temp && /bin/mv PhotoFrameworks/"$NAME".temp PhotoFrameworks/"$NAME"
    /usr/bin/sudo ./SyncPhotoFrameworks
  else
    /usr/bin/sed -f DictionaryPhoto "$PATH" > Photo/"$NAME".temp && /bin/mv Photo/"$NAME".temp Photo/"$NAME"
    /usr/bin/sudo ./SyncPhoto
  fi
fi
echo "작성이 끝났습니다. 다시 시작은 1, 종료는 0을 입력하세요."
read RESTART
if [ $RESTART -eq 1 ]
then
  ./AutoTranslator
  exit
else
  exit
fi
